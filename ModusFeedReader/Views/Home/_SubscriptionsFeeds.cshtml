
@model ViewModels.SubscriptionsVM

@using (Html.BeginForm(FormMethod.Post))
{
    
<div class="row">

    @if (Model != null)
    {
        foreach (var feed in Model.Feeds)
        {
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                <div class="box-part text-center">

                    <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>

                    <div class="title">
                        <h4>@feed.title</h4>
                    </div>

                    <div class="text">
                        <span>Lorem ipsum dolor sit amet, id quo eruditi eloquentiam. Assum decore te sed. Elitr scripta ocurreret qui ad.</span>
                    </div>
                    @if (feed.isSubscribed)
                    {
                    <button type="submit" class="btn btn-default" formaction="@Url.Action("Subscriptions", "Home", new { Id = feed.Id })">Unsubscribe</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-default" formaction="@Url.Action("Subscriptions", "Home", new { Id = feed.Id })">Subscribe</button>
                    }

                </div>
            </div>

        }
    }
</div>

}
